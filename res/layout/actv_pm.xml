<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical|center_horizontal"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/actv_pm_tv_x_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="@color/black"
                android:padding="5dp"
                android:text="@string/actv_pm_x"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/actv_pm_tv_x_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:padding="3dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="30sp" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        
            <TextView
                android:id="@+id/actv_pm_tv_y_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="@color/black"
                android:padding="5dp"
                android:text="@string/actv_pm_y"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/actv_pm_tv_y_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:padding="3dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="30sp" />
            
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            <TextView
                android:id="@+id/actv_pm_tv_z_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="@color/black"
                android:padding="5dp"
                android:text="z"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/actv_pm_tv_z_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:padding="3dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="30sp" />
            
        </TableRow>
    </TableLayout>

</LinearLayout>
